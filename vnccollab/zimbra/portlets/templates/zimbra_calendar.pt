<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:omit-tag="">
<dl class="portlet portletZimbraCalendar"
    i18n:domain="vnccollab.zimbra"
    tal:define="purl context/portal_url">

    <!-- New zimbra calendar portlet -->
    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <a href=""
           target="_blank"
           tal:attributes="href view/data/url"
           tal:content="view/title"
           class="tile">
            Tags
        </a>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletBody calendar portletItem noSlimScroll"
        tal:define="credentials_error_message view/check_credentials;">
        <iframe
            tal:condition="not:credentials_error_message"
            tal:attributes="src    view/src;"
            src=""
            name="zimbra-calendar"
            frameborder="0"
            scrolling="auto">
        </iframe>

        <tal:error condition="credentials_error_message">
          <span tal:replace="credentials_error_message">Error</span>
          <br>
          <span i18n:translate="">You can check your zimbra credentials</span>
          <a href="" i18n:translate=""
             tal:attributes="href string:${purl}/@@personal-information">here</a>.
        </tal:error>
    </dd>
</dl>
</html>
